{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./@types", "./node_modules/@types/screeps-arena/dist"],
    "baseUrl": ".",
    "paths": {
      "@App/*": ["src/*"],
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
